{
  "name": "@contextai/rag",
  "version": "0.0.1",
  "description": "ContextAI RAG Engine - Document loading, chunking, and retrieval",
  "license": "MIT",
  "author": "ContextAI Team",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/draco28/ContextAI.git",
    "directory": "packages/rag"
  },
  "keywords": [
    "rag",
    "retrieval",
    "augmented",
    "generation",
    "document",
    "loader",
    "chunking",
    "embeddings"
  ],
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist .turbo"
  },
  "dependencies": {
    "@contextai/core": "workspace:*",
    "gray-matter": "^4.0.3",
    "mammoth": "^1.8.0",
    "pdf-parse": "^1.1.1"
  },
  "devDependencies": {
    "@contextai/tsconfig": "workspace:*",
    "@types/node": "^20.11.0",
    "@types/pdf-parse": "^1.1.5",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "tsup": "^8.3.0",
    "typescript": "^5.5.0",
    "vitest": "^2.1.0"
  },
  "peerDependencies": {
    "@contextai/core": "workspace:*",
    "@xenova/transformers": "^2.17.0"
  },
  "peerDependenciesMeta": {
    "@xenova/transformers": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
